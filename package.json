{
  "name": "@homebound/graphql-typescript-simple-resolvers",
  "version": "1.0.0-bump",
  "main": "./build/index.js",
  "types": "./build/",
  "packageManager": "yarn@4.10.2",
  "scripts": {
    "build": "rm -rf build; tsc",
    "prepack": " pinst --disable && yarn build",
    "postpack": "pinst --enable",
    "test": "jest",
    "coverage": "jest --collectCoverage",
    "format": "prettier --write 'src/**/*.{ts,js,tsx,jsx}'",
    "graphql-codegen": "rm integration/graphql-types.ts; graphql-codegen --config integration/graphql-codegen.yml",
    "postinstall": "husky"
  },
  "dependencies": {
    "@graphql-codegen/plugin-helpers": "^6.0.0",
    "@graphql-codegen/visitor-plugin-common": "^6.0.0",
    "@homebound/activesupport": "^1.9.0",
    "change-case": "^4.1.2",
    "ts-poet": "^6.12.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^6.0.0",
    "@types/jest": "^30.0.0",
    "graphql": "^16.8.1",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "lint-staged": "^16.1.6",
    "pinst": "^3.0.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.3",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx}": "prettier --write"
  }
}
